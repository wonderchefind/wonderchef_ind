
{% include 'setting-spacing' %}
{% include 'setting-background-color' %}

   {% assign videoId = section.settings.video_url | split: '?v=' %}

{%- assign title_layout = title_layout | default: section.settings.title_layout -%}
{%- assign carousel = carousel | default: section.settings.layout -%}
{%- assign arrows = arrows | default: section.settings.carousel-arrows -%}
{%- assign dots = dots | default: section.settings.carousel-dots -%}

{% if section.settings.custom_color %}
    {% render 'customcolor_feature-image-row' %}
 {% endif %}

<div class=" halo-section  {{ padding_top }} {{ padding_bottom }} text-center"  >
  <div class="">
    <div class="container">
            <div class="section-header text-center ">
                <h2 class="smart-title gradiant">SEE HOW IT WORKS</h2>
                       </div>
<div class="videoWrapper">
   <iframe class="size image-shadow" src="https://www.youtube.com/embed/xtujU_hhCCM?rel=0&amp;modestbranding=1&amp;showinfo=0" title="Nutri-blend Smart From Wonderchef" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
</div>
</div>
</div>

</div>
{% schema %}
{
    "name": "smart compare",
    "max_blocks": 2,
    "settings": [
        {
            "type": "header",
            "content": "Section Layout"
        },
        {
            "type": "checkbox",
            "id": "background-color",
            "label": "Background Gray",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "border-top",
            "label": "show border top",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "border-bottom",
            "label": "show border bottom",
            "default": false
        },
        {
            "type": "range",
            "id": "padding-top",
            "label": "Spacing Top",
            "default": 3,
            "min": 0,
            "max": 10,
            "step": 1
        },
        {
            "type": "range",
            "id": "padding-bottom",
            "label": "Spacing bottom",
            "default": 3,
            "min": 0,
            "max": 10,
            "step": 1
        },
        {
            "type": "header",
            "content": "Heading Section"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Banner Block 1"
        },
        {
            "type": "text",
            "id": "text_link",
            "label": "Text Link"
        },
        {
            "type": "url",
            "id": "custom_link",
            "label": "Link (Optional)"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "select",
            "id": "title_layout",
            "label": "Title Layout",
            "default": "center",
            "options": [
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "left",
                    "label": "Left"
                }
            ]
        },
        {
            "type": "header",
            "content": "Layout Column"
        },
        {
            "type": "range",
            "id": "column",
            "label": "Column",
            "default": 3,
            "min": 1,
            "max": 5,
            "step": 1
        },
       {
          "type": "text",
          "id": "video_url",
          "label": "YouTube video URL"
       },
        {
            "type": "header",
            "content": "Block Style"
        },
        {
            "type": "select",
            "id": "overlay",
            "label": "Overlays",
            "default": "dark",
            "options": [
                {
                    "label": "Dark",
                    "value": "dark"
                },
                {
                    "label": "Light",
                    "value": "light"
                }
            ]
        },
        {
            "type": "header",
            "content": "Custom Color"
        },
        {
            "type": "checkbox",
            "id": "custom_color",
            "label": "Turn on custom color",
            "default": false
        },
        {
            "type": "color",
            "id": "color_heading",
            "label": "Heading Color"
        },
        {
            "type": "color",
            "id": "color_heading_hover",
            "label": "Heading Color Hover"
        },
        {
            "type": "color",
            "id": "color_text",
            "label": "Description Color"
        }
    ],
    "blocks": [
        {
            "type": "banner_block",
            "name": "Another Block",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link (Optional)"
                },
               {
                    "type": "text",
                    "id": "title",
                    "label": "Main Title",
                    "default": "Title"
                },
                {
                    "type": "text",
                    "id": "title1",
                    "label": "Title 1",
                    "default": "Title"
                },
                {
                    "type": "text",
                    "id": "description1",
                    "label": "Description 1",
                    "default": "Image with text overlay"
                },
              {
                    "type": "text",
                    "id": "title2",
                    "label": "Title 2",
                    "default": "Title"
                },
                {
                    "type": "text",
                    "id": "description2",
                    "label": "Description 2",
                    "default": "Image with text overlay"
                },
              {
                    "type": "text",
                    "id": "title3",
                    "label": "Title 3",
                    "default": "Title"
                },
                {
                    "type": "text",
                    "id": "description3",
                    "label": "Description 3",
                    "default": "Image with text overlay"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "smart-points",
            "category": "Banners",
            "blocks": [
                {
                    "type": "banner_block"
                },
                {
                    "type": "banner_block"
                }
            ]
        }
    ]
}
{% endschema %}