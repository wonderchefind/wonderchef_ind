<script>

$(document).ready(function(){   
  //show more option
    var size_item = $('.listing').length;
    var v=4;
    $('.listing').hide(); // hide all divs with class `listing`
    $('.listing:lt('+v+')').show();
    $('#load_more').click(function () {
        v= (v+4 <= size_item) ? v+4 : size_item;
        $('.listing:lt('+v+')').show();
        // hide load more button if all items are visible
        if($(".listing:visible").length >= size_item ){ $("#load_more").hide(); }
    });
});


</script>


{% schema %}

{
  "name": "Home Blogs",
  "class": "blog-section",
  "max_blocks": 16,
  "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "content",
        "label": "Content"
      }
  ],
  "blocks": [
  {
    "type": "blog_image",
    "name": "Blog",
    "settings": [
	    {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Upload blog image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "blog_title",
          "label": "Title"
        }
      ]
  	}
  ]
}

{% endschema %}
