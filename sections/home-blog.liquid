<div class="m-sec-blg">
  <div class="container">
    <div class="cust-blog">
      <div class="one-third column text-column">
        <div class="border-style--none text-align--left darkgrey-bg">
          <h3 class="regular_text">{{ section.settings.title }}</h3>
          <div class="rte-setting">
            <p>{{ section.settings.content }} </p>
            <a target="_blank" href="https://blog.wonderchef.com/" title="" class="action_button continue-button">View All</a>
          </div>
        </div>
      </div>
      
      <div class="ten medium-down--one-whole  columns equal-columns--outside-trim equal-columns--clear" >
        <div class="border-style--none text-align--left">
          <div class="related-products related-products--slider js-blog-post-slider">
            
            {% comment %}            
            {% assign limit = limit | plus: 0 %}        
            {% assign loop_limit = limit | plus: 1 %}
            <div class="slider-gallery products-slider products-length-{{ products_length }} "
                 data-products-per-slide="2"
                 data-products-limit="{{ limit }}"
                 data-products-available="30">
              {% for link in linklists.footer.links %}
                {% assign blog = link.object %}
                {% for article in blog.articles limit:100 %}              
                  <div class="gallery-cell thumbnail visible-2">
                    <div class="product-wrap">
                      <div class="relative product_image fixHeight">
                        
                        {% if article.image %}
                          <a target="_blank" href="{{ article.url }}" title="{{ article.title | escape }}" class="blog-main-items">
                            <div class="image__container">
                              <div class="image-element__wrap">
	                            {% include 'image-element', image: article.image, alt: image.alt %}                                
                                <h4>{{ article.title }}</h4>
                              </div>
                            </div>                            
                          </a>
                        {% endif %}                        

                        <a href="{{ article.url }}" title="{{ article.title }}" class="action_button continue-button">Read More</a>
                      </div>
                    </div>
                  </div>    
                {% endfor %}
              {% endfor %}              
              
            </div> 
            {% endcomment %}

            <div class="slider-gallery products-slider products-length-{{ blocks.size }} "
                 data-products-per-slide="2"
                 data-products-limit="16"
                 data-products-available="16">
              {% if section.blocks.size > 0 %}
              	{% for block in section.blocks %}
              		{% if block.settings.blog_title != blank and block.settings.image != blank and block.settings.link != blank%}              
                      <div class="gallery-cell thumbnail visible-2">
                        <div class="product-wrap">
                          <div class="relative product_image fixHeight">

                            <a target="_blank" href="{{ block.settings.link }}" title="{{ block.settings.blog_title | escape }}" class="blog-main-items">
                              <div class="image__container">
                                <div class="image-element__wrap">
                                  {% include 'image-element', image: block.settings.image, alt: block.settings.image.alt %}                                
                                  <h4>{{ block.settings.blog_title }}</h4>
                                </div>
                              </div>                            
                            </a>
                            <a href="{{ block.settings.link }}" title="{{ block.settings.blog_title }}" class="action_button continue-button">Read More</a>
                          </div>
                        </div>
                      </div>  
	              	{% endif %}                    
              	{% endfor %}
              {% endif %}              

              
            </div>      
          </div>      

        </div>
      </div>
    </div>
    
    <div class="cust-blog-mobile">
      <div class="sixteen column text-column">
        <div class="border-style--none text-align--left darkgrey-bg">
          <h3 class="regular_text" >{{ section.settings.title }}</h3>
          <div class="rte-setting" >
            <p>&nbsp;</p>
          </div>
        </div>
        <div class="blog-m-section">
          {% if section.blocks.size > 0 %}
          	{% for block in section.blocks %}
          		{% if block.settings.blog_title != blank and block.settings.image != blank and block.settings.link != blank%}              
                  <div class="relative product_image listing fixHeight">
                    <a target="_blank" href="{{ block.settings.link }}" title="{{ block.settings.title | escape }}" class="blog-main-items">
                      <div class="image__container">
                        <div class="image-element__wrap">
                          {% include 'image-element', image: block.settings.image, alt: block.settings.image.alt %}                                
                          <h4>{{ block.settings.blog_title }}</h4>
                        </div>
                      </div>                            
                    </a>
                    <a href="{{ block.settings.link }}" title="{{ block.settings.blog_title }}" class="action_button continue-button">Read More</a>                                                                              
                  </div>          
          		{% endif %}                    
          	{% endfor %}
          {% endif %}           
          <a title="" target="_blank" id="load_more" class="action_button continue-button">View More</a>
          
          {% comment %}
          {% for link in linklists.footer.links %}
            {% assign blog = link.object %}
          	{% for article in blog.articles limit:100 %}              
              <div class="relative product_image listing fixHeight">
                {% if article.image %}
                <a target="_blank" href="{{ article.url }}" title="{{ article.title | escape }}" class="blog-main-items">
                  <div class="image__container">
                    <div class="image-element__wrap">
                      {% include 'image-element', image: article.image, alt: image.alt %}                                
                      <h4>{{ article.title }}</h4>
                    </div>
                  </div>                            
                </a>
                {% endif %}                    
                <a href="{{ article.url }}" title="{{ article.title }}" class="action_button continue-button">Read More</a>                                                                              
              </div>
          	{% endfor %}
          {% endfor %}           
          {% endcomment %}
          
        </div>
      </div>
    </div>
  </div> 
</div>




