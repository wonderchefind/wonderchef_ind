{%- assign title_layout = title_layout | default: section.settings.title_layout -%}

<div class="halo-section {{ padding_top }} {{ padding_bottom }} {{ background_color }} {{ border-top }} {{ border-bottom }}" data-section-id="{{ section.id }}">
    <div class="container">
        {% if section.settings.title != blank %}
            <div class="section-header
                {% case title_layout %}
                    {% when 'left' %} text-left
                    {% when 'center' %} text-center
                {% endcase %}">
                <h2>{% render 'multilang' with section.settings.title %}</h2>
                {% if section.settings.text_link != blank %}
                    <a class="text-link" href="{{ section.settings.custom_link }}">
                        {% render 'multilang' with section.settings.text_link %}
                    </a>
                {% endif %}
                {% if section.settings.description != blank %}
                    <p>{% render 'multilang' with section.settings.description %}</p>
                {% endif %}
            </div>
        {% endif %}
        <div class="halo-column column-2">
            <div class="halo-item">
                {% for block in section.blocks %}
                    {% if forloop.index == 1 %}
                        {{ card_layout_1 }}
                    {% endif %}
                    {% if forloop.index == 3 %}
                        {{ card_layout_3 }}
                    {% endif %}
                {% endfor %}
            </div>
            <div class="halo-item">
                {% for block in section.blocks %}
                    {% if forloop.index == 2 %}
                        {{ card_layout_2 }}
                    {% endif %}
                    {% if forloop.index == 4 %}
                        {{ card_layout_4 }}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        {% if section.settings.button_all != blank %}
            <div class="halo-button-wrapper padding-top-40 text-center">
                <a href="{{ section.settings.button_all_link }}" class="btn btn--big btn--secondary">{% render 'multilang' with section.settings.button_all %}</a>
            </div>
        {% endif %}
    </div>
</div>

