  {
    "name": "Product Tab 2",
    "max_blocks": 8,
    "settings": [
      {
        "type": "header",
        "content": "Section Layout"
      },
      {
        "type": "checkbox",
        "id": "background-color",
        "label": "Background Gray",
        "default": false
      },
      {
