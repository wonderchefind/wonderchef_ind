        "default": 3,
        "min": 0,
        "max": 10,
        "step": 1
      }, {
        "type": "range",
        "id": "padding-bottom",
        "label": "Spacing bottom",
        "default": 3,
        "min": 0,
        "max": 10,
        "step": 1
      }, {
        "type": "header",
        "content": "Heading"
