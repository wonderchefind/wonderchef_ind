    ],
    "presets": [
      {
        "name": "Product Tab 2",
        "category": "Product Tabs",
        "blocks": [
          {
            "type": "collectiontab"
          },
          {
            "type": "collectiontab"
          },
          {
            "type": "collectiontab"
          },
          {
            "type": "collectiontab"
          }, {
            "type": "collectiontab"
          }
        ]
      }
    ]
  }
{% endschema %}