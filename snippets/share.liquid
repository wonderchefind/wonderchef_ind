<div class="share_toolbox">  
   <!-- Add product share option to Shopify product page -->

{% if template contains 'product' %}
  <div class="product-share">
    <h3>Share this product:</h3>
    <div class="product-sharing-buttons">
   
        <a class="share-button" href="https://www.facebook.com/sharer/sharer.php?u=https://wonderchefind.myshopify.com{{ product.url }}" target="_blank" rel="noopener noreferrer">
         <i class="fa fa-facebook-square" style="font-size:48px;color:red"></i>
        </a>
    
        <a class="share-button" href="https://twitter.com/intent/tweet?url=https://wonderchefind.myshopify.com{{ product.url }}&text={{ product.title }}" target="_blank" rel="noopener noreferrer">
          Share on Twitter
        </a>
     
        <a class="share-button" href="https://pinterest.com/pin/create/button/?url=https://wonderchefind.myshopify.com{{ product.url }}&media={{ product.featured_image | img_url: 'medium' }}&description={{ product.title }}" target="_blank" rel="noopener noreferrer">
          Pin it on Pinterest
        </a>
     
        <a class="share-button" href="whatsapp://send?text={{ product.title }} - https://wonderchefind.myshopify.com{{ product.url }}" target="_blank" rel="noopener noreferrer">
          Share on WhatsApp
        </a>
     
        <a class="share-button" href="mailto:?subject=Check out this product&body=Hey, I found this amazing product and thought you might like it! %0D%0A%0D%0A{{ product.title }} - https://wonderchefind.myshopify.com{{ product.url }}">
          Share via Email
        </a>
    
        <button class="share-button" onclick="copyProductURL()">
          Copy URL
        </button>
     
    </div>
  </div>

  <script>
    function copyProductURL() {
      var copyText = "{{ product.url }}";
      var tempInput = document.createElement("input");
      tempInput.value = copyText;
      document.body.appendChild(tempInput);
      tempInput.select();
      document.execCommand("copy");
      document.body.removeChild(tempInput);
      alert("Product URL copied to clipboard!");
    }
  </script>
{% endif %}

</div>
<style>
  .product-sharing-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}

.share-button {
  display: inline-block;
  padding: 8px 12px;
  background-color: #0070c9;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
  font-size: 14px;
  font-weight: bold;
  margin-right: 10px;
}

.share-button:hover {
  background-color: #005ea3;
}
</style>