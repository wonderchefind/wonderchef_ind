<div class="share_toolbox">  
   <!-- Add product share option to Shopify product page -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{% if template contains 'product' %}
  <div class="product-sharing-buttons">
  <a class="share-button" href="#" onclick="shareOnFacebook('https://wonderchef.com{{ product.url }}')"><i class="fa fa-facebook-square" ></i></a>
  <a class="share-button" href="#" onclick="shareOnTwitter('{{ product.title }}', 'https://wonderchef.com{{ product.url }}')"> <i class="fa fa-twitter-square" ></i></a>
  <a class="share-button" href="#" onclick="shareOnPinterest('{{ product.title }}', 'https://wonderchef.com{{ product.url }}')"><i class="fa fa-pinterest-square"></i></a>
  <a class="share-button" href="#" onclick="shareOnWhatsapp('{{ product.title }}', 'https://wonderchef.com{{ product.url }}')"><i class="fa fa-whatsapp"></i></a>
  <a class="share-button" href="mailto:?subject=Check out this product&body=Hey, I found this amazing product and thought you might like it! %0D%0A%0D%0A{{ product.title }} - https://wonderchef.com{{ product.url }}">
         <i class="fa fa-envelope-square"></i>
        </a>
    
        <a class="share-button" onclick="copyProductURL()">
          <i class="fa fa-clone"></i>
        </a>
</div>
  <script>
    function copyProductURL() {
      var copyText = "https://wonderchef.com{{ product.url }}";
      var tempInput = document.createElement("input");
      tempInput.value = copyText;
      document.body.appendChild(tempInput);
      tempInput.select();
      document.execCommand("copy");
      document.body.removeChild(tempInput);
      alert("Product URL copied to clipboard!");
    }
  </script>
{% endif %}

</div>
