<div class="share_toolbox">  
   <div class="product-sharing-buttons">
  <a class="share-button" href="#" onclick="shareOnFacebook('{{ product.url }}')">Share on Facebook</a>
  <a class="share-button" href="#" onclick="shareOnTwitter('{{ product.title }}', '{{ product.url }}')">Share on Twitter</a>
  <a class="share-button" href="#" onclick="shareOnPinterest('{{ product.title }}', '{{ product.url }}')">Share on Pinterest</a>
</div>
<script>
  function shareOnFacebook(url) {
    window.open('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(url), '_blank');
  }

  function shareOnTwitter(title, url) {
    window.open('https://twitter.com/intent/tweet?text=' + encodeURIComponent(title) + '&url=' + encodeURIComponent(url), '_blank');
  }

  function shareOnPinterest(description, url) {
    window.open('https://www.pinterest.com/pin/create/button/?description=' + encodeURIComponent(description) + '&url=' + encodeURIComponent(url), '_blank');
  }
</script>

</div>
<style>
  .product-sharing-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}

.share-button {
  display: inline-block;
  padding: 8px 12px;
  background-color: #0070c9;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
  font-size: 14px;
  font-weight: bold;
  margin-right: 10px;
}

.share-button:hover {
  background-color: #005ea3;
}

</style>