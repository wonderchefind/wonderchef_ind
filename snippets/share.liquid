<div class="share_toolbox">  
   <!-- Add product share option to Shopify product page -->

{% if template contains 'product' %}
  <div class="product-share">
    <h3>Share this product:</h3>
    <ul>
      <li>
        <a href="https://www.facebook.com/sharer/sharer.php?u=https://wonderchefind.myshopify.com{{ product.url }}" target="_blank" rel="noopener noreferrer">
          Share on Facebook
        </a>
      </li>
      <li>
        <a href="https://twitter.com/intent/tweet?url=https://wonderchefind.myshopify.com{{ product.url }}&text={{ product.title }}" target="_blank" rel="noopener noreferrer">
          Share on Twitter
        </a>
      </li>
      <li>
        <a href="https://pinterest.com/pin/create/button/?url=https://wonderchefind.myshopify.com{{ product.url }}&media={{ product.featured_image | img_url: 'medium' }}&description={{ product.title }}" target="_blank" rel="noopener noreferrer">
          Pin it on Pinterest
        </a>
      </li>
      <li>
        <a href="whatsapp://send?text={{ product.title }} - https://wonderchefind.myshopify.com{{ product.url }}" target="_blank" rel="noopener noreferrer">
          Share on WhatsApp
        </a>
      </li>
      <li>
        <a href="mailto:?subject=Check out this product&body=Hey, I found this amazing product and thought you might like it! %0D%0A%0D%0A{{ product.title }} - https://wonderchefind.myshopify.com{{ product.url }}">
          Share via Email
        </a>
      </li>
      <li>
        <button onclick="copyProductURL()">
          Copy URL
        </button>
      </li>
    </ul>
  </div>

  <script>
    function copyProductURL() {
      var copyText = "{{ product.url }}";
      var tempInput = document.createElement("input");
      tempInput.value = copyText;
      document.body.appendChild(tempInput);
      tempInput.select();
      document.execCommand("copy");
      document.body.removeChild(tempInput);
      alert("Product URL copied to clipboard!");
    }
  </script>
{% endif %}

</div>