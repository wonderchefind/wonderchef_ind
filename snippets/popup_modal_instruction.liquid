{% if section.settings.instruction_product and product.metafields.halo['instruction'] != blank %}
    <div class="modal fade halo_modal" id="instruction_product" role="dialog" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    {% if section.settings.instruction_header != blank %}
                        <h5 class="modal-title">
                            {% render 'multilang' with section.settings.instruction_header %}
                        </h5>
                    {% endif %}
                    <a data-dismiss="modal" class="close close-modal" href="javascript:void(0)">&#215;</a>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                       {{ product.metafields.halo['instruction'] }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}