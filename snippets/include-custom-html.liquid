{% if type == 'block' %}
{% assign custom_html = block.settings.custom_html %}
{% else %}
{% assign custom_html = section.settings.custom_html %}
{% endif %}

<div class="homepage_content clearfix">
  <div class="container">
    <div class="sixteen columns">
      <div class="block__{{ block.type }} {% if blockLength > 1 %}eight{% else %}sixteen{% endif %} columns equal-columns--outside-trim" {{ block.shopify_attributes }}>
        <h2 class="title insta red_title">
          <a href="https://www.instagram.com/wondercheflife/" target="_blank">
            Instagram
          </a>
        </h2>
        {% if block.settings.instagram_title != blank %}{% endif %}
        <div class="feature_divider"></div>
      </div>
      <div class="section clearfix">
        {% if custom_html != blank %}
        {{ custom_html }}
        {% else %}
        <p class="center">
          {{ 'homepage.onboarding.no_content' | t }}
        </p>
        {% endif %}
      </div>
    </div>
  </div>
</div>