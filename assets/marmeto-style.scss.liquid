    width: 25px;
    height: 25px;
    border-radius: 50%;
    background: #fff0;
    border: 1px solid #ddd;
    cursor: pointer;
    animation: pulse 2s infinite;
  }
  .count{
    font-size: 12px;
    position: absolute;
    font-weight: bold;
  }
  .resend-text{
    color: #499dd5;
    font-size: 11px;
    font-weight: 500;
    cursor:pointer;
  }
  .resend-text.disabled{
    color:#a2a2a2;
  }
  .edit-icon{
    width: 13px;
    padding-left: 3px;
    padding-top: 0px;
  }
  .edit-contact{
    text-decoration: underline;
  }
  .inner-resend{
    align-items: center;
    vertical-align: middle;
    justify-content: center;
    width: 30px;
    margin-top: -5px;
    padding-right: 6px;
    display: flex;
  }
  .otp-error{
    text-align: center;
    font-size: 12px;
    color: #dd423f;
    span{
      display:block;
    }
  }
}


