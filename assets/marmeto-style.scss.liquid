  .contact-block{
    padding: 0 24px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
  }
  .submit-btn{
    padding-top: 20px;
    padding-bottom: 20px;
    .btn{
      padding: 10px;
      width: 100%;
      border-radius: 3px;
      background-image: linear-gradient(to bottom right, rgba(255,255,255,0.2), rgba(0,0,0,0.2));
