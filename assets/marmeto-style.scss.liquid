@mixin transform($transforms) {
  -moz-transform: $transforms;
  -o-transform: $transforms;
  -ms-transform: $transforms;
  -webkit-transform: $transforms;
  transform: $transforms;
}
.cod_banner{
  margin: 0;
  text-align: center;
  line-height: 1;
  font-size: 16px;
  color: #fff;
  margin-bottom: 10px;
  padding: 15px;
  text-transform: uppercase;
  background: #E31E24;
  border-radius: 5px;
  font-weight: bold;
  @media(min-width: 768px){
    margin-top: -15px;  
  }
}
.loading_me{
  position: fixed;
  top:0;
  left:0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.54);
  display: none;
  z-index: 1000;
  .img{
    position: fixed;
    top: 50%;
    left: 50%;
    @include transform(translate(-50%,-50%));  
    background: #000;
    padding: 10px;
    border-radius: 10px;
    line-height: 1; 
    color: #fff;
  }
}

@media (max-width: 480px){
  body .banner { 
    display:none;
    background:url('') center center;/* 15% off mobile banner*/
    background-size: cover;
  }
}

@media screen and (min-width: 1500px) {

  body .banner{	  
    display:none;
    background-size: contain;
    background-repeat: no-repeat;
    background-color: #f8c045;
  }
}



