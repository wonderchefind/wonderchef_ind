  .inner-head{
    white-space: nowrap;
    position: relative;
    text-shadow: 0 1px 3px rgba(0,0,0,0.12);
  }
  .brand-name{
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 20px;
  }
  .brand-desc{
    padding-top: 5px;
    text-overflow: ellipsis;
    overflow: hidden;
    opacity: .8;
    a{
      color:#fff;
    }
  }
  .mm-amount{
    font-size: 24px;
    margin-top: 10px;
  }
  .form-wrapper{
    position: relative;
    z-index: 1;
    -webkit-border-radius: 0 0 3px 3px;
    border-radius: 0 0 3px 3px;
    background: #fff;
  }
  .inner-form{
    padding: 20px 0 0;
    top: 0;
    bottom: 0;
  }
  .otp-block{
    padding: 0 24px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
  }
  .element-wrap{
    height: 65px;
  }
  .contact-form{
    color: #424242;
    border-bottom: 1px solid #ebedf0;
    position: relative;
    .contact-icon{
      position: absolute;
      font-size: 20px;
      bottom: 6px;
      right: 0;
      color: #8f8f8f;
    }
    .contact-label{
      -webkit-transform: scale(.86) translateY(-20px);
      -ms-transform: scale(.86) translateY(-20px);
      transform: scale(.86) translateY(-20px);
      -webkit-transform-origin: 0 0;
      -ms-transform-origin: 0 0;
      transform-origin: 0 0;
      color: #757575;
      left: 0;
      font-size: 11px;
      z-index: 1;
      pointer-events: none;
