.field[data-address-field="zip"]{
  position:relative;
  .location_pin{
    position: absolute;
    right: 5px;
    top: 10px;
    opacity: 0.7;
    width: 24px;
    cursor: pointer;
    animation: pulse 2s infinite;
    border-radius: 100%;
  }
}
.pincode_wrapper{
  display:none;
  .pincode_container{
    position: absolute;
    box-shadow: 0 6px 19px 0 rgba(122, 122, 122, 0.23);
    border-radius: 5px;
    border-color: #d9d9d9;
    border-style: solid;
    border-width: 0px 1px 1px 1px;
    width: calc(100% - 13px);
    background: #fff;
    z-index: 2;
    .pin-header{
      display: inline-flex;
      align-items: center;
      width: 100%;
      justify-content: space-between;
      background: #eee;
      border-bottom: 1px solid #e2e2e2;
      p{
        text-align: left;
        font-weight: 500;
        font-size: 15px;
        padding: 5px 8px;
      }
      .close-pin{
        cursor:pointer;
        padding-right: 8px;
      }
    }
    li{
      cursor:pointer;
      padding: 5px 5px;
      border-bottom: 1px solid #e2e2e2;
      &:hover{
        background: #e7e7e7;
      }
      span{
        text-transform:capitalize;
      }
    }
    .pin-suggestions{
      max-height: 190px;
      overflow-y: scroll;
    }
    
  }
}
