                border: 2px solid #ffffff;
                svg {
                    fill: #ffffff;
                }
            }
            &.slideshow--adapt {
                .slide-image {
                    height: auto;
                    .image-background {
                        top: 0;
                        left: 0;
                        width: 100%;
                        height: auto;
                        min-width: 0;
                        min-height: 0;
                        position: relative;
                        transform: none;
                    }
