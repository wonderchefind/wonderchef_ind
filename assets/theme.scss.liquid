                cursor: pointer;
            }
            &:not(.color) {
                label {
                    border: 1px solid #c8c8c8;
                    &:after {
                        position: absolute;
                        top: 0;
                        left: 0;
                        content: "";
                        width: 100%;
                        height: 100%;
                        border: 2px solid #000000;
                        background-color: rgba(255, 255, 255, 0);
                        z-index: 2;
                        opacity: 0;
                        visibility: hidden;
                        transition: all 0.3s ease;
                        border-radius: $border-radius;
                    }
                }
            }
            &.color {
                label {
                    font-size: 0;
                    position: relative;
                    background-size: cover;
