                        background-color: rgba(255, 255, 255, 0);
                        z-index: 2;
                        opacity: 0;
                        visibility: hidden;
                        transition: all 0.3s ease;
                        border-radius: $border-radius;
                    }
                }
                input:checked {
                    & + label {
                        border: none;
                    }
                }
            }
            input:checked {
                &+label {
                    border-color: #000000;
                    font-weight: 700;
                    &:after {
                        opacity: 1;
                        visibility: visible;
                    }
                }
            }
        }

