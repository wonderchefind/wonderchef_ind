        text-transform: capitalize;
        background-color: transparent;
        color: $color-small-button-text;
        font-family: $font-stack-body;
        box-shadow: none;
        span {
            position: relative;
            &:before {
                content: "";
                position: absolute;
                left: 0;
                bottom: -1px;
                height: 1px;
                width: 0;
                transition: all 0.3s ease;
                background-color: $color-small-button-text-hover;
            }
        }
