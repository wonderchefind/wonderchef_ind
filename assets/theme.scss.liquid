            height: 9px;
        }
        &.disabled {
            opacity: 0.7;
            pointer-events: none;
        }
        &[disabled],
        &[aria-disabled] {
            cursor: default;
            opacity: 0.7;
            box-shadow: none;
            color: $color-btn-secondary-text-hover;
            border-color: $color-btn-secondary-border-hover;
            background-color: $color-btn-secondary-hover;
            pointer-events: none;
        }
        .icon {
            width: 8px;
            height: 8px;
            font-size: 10px;
            margin-left: 3px;
            margin-top: -1px;
            display: inline-block;
        }
        .icon--big {
            width: 16px;
            height: 16px;
            line-height: 16px;
            font-size: 24px;
            margin: 0;
            margin-right: 5px;
            font-weight: 400;
            opacity: 0.8;
            vertical-align: middle;
            font-family: $font-stack-body;
        }
        [data-loader] {
            .icon {
                margin: 0;
                width: 16px;
                height: 16px;
            }
        }
    }

    .btn--primary {
        color: $color-btn-primary-text;
        border-color: $color-btn-primary-border;
        background-color: $color-btn-primary;
        &:not([disabled]):hover,
        &:focus {
            color: $color-btn-primary-text-hover;
            border-color: $color-btn-primary-border-hover;
            background-color: $color-btn-primary-hover;
        }
    }

    .btn--secondary {
        color: $color-btn-secondary-text;
        border-color: $color-btn-secondary-border;
        background-color: $color-btn-secondary;
        &:not([disabled]):hover,
        &:focus {
            color: $color-btn-secondary-text-hover;
            border-color: $color-btn-secondary-border-hover;
            background-color: $color-btn-secondary-hover;
        }
    }


    .btn--secondary-accent {
        color: $color-btn-secondary-text-hover;
        border-color: $color-btn-secondary-border-hover;
        background-color: $color-btn-secondary-hover;

        &:not([disabled]):hover,
        &:focus {
            color: $color-btn-secondary-text-hover;
            border-color: $color-btn-secondary-border-hover;
            background-color: $color-btn-secondary-hover !important;
        }
    }

    .btn--small {
        line-height: 1;
        padding: 8px 10px;
        font-size: em(12);
    }

    .btn--big {
        min-width: 150px;
        @include media-query($halo-medium) {
            padding-left: 45px;
            padding-right: 45px;
        }
    }

